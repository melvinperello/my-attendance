<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs',{title:"my-attendance"}) -%>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
        <div style="display: flex; width: 100%">
          <div style="flex: 1">
            <a class="navbar-brand" href="#">
              <img
                src="/public/images/logo-128.png"
                alt=""
                width="30"
                height="24"
                class="d-inline-block align-text-top"
              />
              my-attendance
            </a>
          </div>
          <div style="color: #ffffff">
            <div
              style="
                display: flex;
                flex-direction: row;
                align-items: center;
                gap: 0.25rem;
              "
            >
              <sup style="font-size: xx-small">powered by</sup>
              <img
                src="/public/images/gcp-128.png"
                alt=""
                width="25"
                height="25"
                class="d-inline-block align-text-top"
              />
              <div
                style="
                  display: flex;
                  flex-direction: column;
                  align-items: center;
                  padding-left: 0.125rem;
                "
              >
                <span style="font-size: x-small">Google Cloud</span>
                <span style="font-size: x-small">Platform</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <main>
      <div class="container mt-3">
        <div class="row justify-content-center">
          <div class="col col-sm-4">
            <div class="card">
              <div class="card-body">
                <form>
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >username</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="exampleInputEmail1"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label"
                      >code</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="exampleInputPassword1"
                      aria-describedby="emailHelp"
                    />
                    <div id="emailHelp" class="form-text">
                      Open your authenticator app to get the code.
                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary">Login</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
